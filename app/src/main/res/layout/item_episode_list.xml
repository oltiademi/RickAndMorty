<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/episode_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="S01E01"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/episode_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pilot"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toBottomOf="@id/episode_number"
        app:layout_constraintStart_toStartOf="@id/episode_number"
        android:textColor="#6E798C" />

    <TextView
        android:id="@+id/episode_release_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="December 2, 2012"
        android:textSize="10sp"
        android:textColor="#8E8E93"
        app:layout_constraintStart_toStartOf="@id/episode_title"
        app:layout_constraintTop_toBottomOf="@id/episode_title" />

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_right_arrow"
        android:background="@color/white"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>